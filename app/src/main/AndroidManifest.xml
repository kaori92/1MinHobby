<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.new1minhobby">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/appTheme">

        <activity
            android:name=".activities.QuestionTypeActivity"
            android:theme="@style/splashScreenTheme">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".activities.QuestionTimeActivity"/>

        <activity android:name=".activities.QuestionMoneyActivity"/>

        <activity android:name=".activities.HobbyListActivity"/>

        <activity android:name=".activities.HobbyDetailActivity"/>
    </application>
</manifest>
